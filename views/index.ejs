    <!-- jQuery -->
    <script src="js/jquery-2.1.1.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="js/raphael-min.js"></script>
    <script src="js/morris.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/sb-admin-2.js"></script>
	
	<script>
	$(function() {
		Morris.Donut({
			element: 'metas',
			data: [{
				label: "Acompanhadas",
				value: <%=qtdMetas%>
			}, {
				label: "A acompanhar",
				value:<%=qtdMetasSemIndicador%>
			}],
			resize: true,
			formatter: function (y, data) { return y }
		}).select(0);
		
		Morris.Donut({
			element: 'indicadores',
			data: [{
				label: "Com Valores",
				value: <%=qtdIndicadores%>
			}, {
				label: "A levantar",
				value: <%=qtdIndicadoresSemAcompanhar%>
			}],
			resize: true,
			formatter: function (y, data) { return y }
		}).select(0);
	});
	</script>			
