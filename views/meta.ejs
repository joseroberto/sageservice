<% include partials/header %>
<div class="boxed" >

	<!--CONTENT CONTAINER-->
	<!--===================================================-->
	<div id="content-container">
		
		<!--Page Title-->
		<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
		<div id="page-title">
			<h1 class="page-header text-overflow">Comportamento da Meta</h1>
		</div>
		<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
		<!--End page title-->

		<!--Page content-->
		<!--===================================================-->
		<div id="page-content">
			<div class="panel">
				<div class="panel-heading">								
					<div class="panel">
						<div class="panel-heading">
							<h3 class="panel-title"><%=data[0].sigla%> - <%=data[0].nome%></h3>
						</div>
			
						<!-- Striped Table -->
						<!--===================================================-->
						<div class="panel-body">					
							<div class="table-responsive">
								<%data.forEach( (item)=>{%>	
								<table class="table table-striped">
									<thead>
										<tr>
											<th>Ano <span class="text-info"><%=item.ano%></span></th>
											<th colspan="3">Linha de base <span class="text-info"><%=item.linhaBase%></span></th>
											<th>&nbsp;</th>
											<th colspan="3">Meta 2016 <span class="text-info"><%=item.meta%></span></th>
											<th colspan="2">&nbsp;</th>
											<th colspan="3">Meta 2019 <span class="text-info"><%=item.metaQuadrienal%></span></th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<td colspan="13" class="text-bold text-info">
												<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="<%=item.conceitoindicador%>">Refer&ecirc;ncia: <%=item.codigoindicador%> - <%=item.nomeindicador%></button>
											</td>
										</tr>
									</tfoot>
									<tbody>
									<%for(j=0;j<item.obj.length;j++){%>
										<tr>
											<%for(i=0;i<item.obj[j].length;i++){%>
											<td class="<%=((i==0) || (j==0)?'text-right text-bold' :'text-center')%> <%=(j==1)? 'text-info' : ''%>"><%=item.obj[j][i]%></td>
											<%}%>
										</tr>
									<%}%>
									</tbody>
								</table>
								<hr />
								<%});%>
							</div>
						</div>
						<!--===================================================-->
						<!-- End Striped Table -->
					</div>								
				</div>
			</div>

		</div>
		<!--===================================================-->
		<!--End page content-->


	</div>
	<!--===================================================-->
	<!--END CONTENT CONTAINER-->
	<% include partials/navigation %>

</div>	

<script>
    $('.panel-body').tooltip({
        selector: "[data-toggle=tooltip]",
        container: "body"
    })
</script>	
<% include partials/footer %>
